@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         swal({
                title: "@ViewBag.Message",
                text: "Gracias por su compra..",
                type: "warning",
                //showCancelButton: true,
                confirmButtonColor: '#3085d6'
                //cancelButtonColor: '#d33',
                //confirmButtonText: 'Si, estoy seguro',
                //cancelButtonText: "Cancelar"
            });

    </script>
}
@if (ViewBag.MessageCliente != null)
{
    <script type="text/javascript">

         swal({
                title: "@ViewBag.MessageCliente",
                text: "Gracias por su compra..",
                type: "warning",
                //showCancelButton: true,
                confirmButtonColor: '#3085d6'
                //cancelButtonColor: '#d33',
                //confirmButtonText: 'Si, estoy seguro',
                //cancelButtonText: "Cancelar"
            });

    </script>
}

<body>

    <section class="body">
        <div role="main" class="main shop py-4">
            <div class="container">
                <a class="btn search-toggle d-none d-md-inline-block d-xl-none" data-toggle-class="active" data-target=".search"><i class="fas fa-search"></i></a>
                <form action="~/CrearPedido/Buscar" class="search nav-form d-none d-xl-inline-block" method="post">
                    <div class="input-group">
                        <input type="text" class="form-control" name="buscar" id="q" placeholder="Buscar Producto...">
                        <span class="input-group-append">
                            <button class="btn btn-default" type="submit"><i class="fas fa-search"></i></button>
                        </span>
                    </div>
                </form>
                <form action="~/CrearPedido/Iniciar" class="search nav-form d-none d-xl-inline-block" method="post">
                    <div class="input-group">
                        <span class="input-group-append">
                            <input type="submit" value="Iniciar Pedido" name="iniciarcompra" class="btn btn-primary mt-2">
                        </span>
                    </div>

                </form>
                <form action="~/Productos/index" class="search nav-form d-none d-xl-inline-block" method="post">
                    <div class="input-group">
                        <span class="input-group-append">
                            <input type="submit" value="Ver Catalogo" name="VerCatalogo" class="btn btn-primary mt-2">
                        </span>
                    </div>

                </form>
                <div class="row">
                    <div class="col">

                        <div class="featured-boxes">
                            <div class="row">
                                <div class="col">
                                    <div class="featured-box featured-box-primary text-left mt-2">
                                        <div class="box-content">
                                            @*<form method="post" action="">*@
                                            <table class="shop_table cart">
                                                <thead>
                                                    <tr>
                                                        <th class="product-remove">
                                                            &nbsp;
                                                        </th>
                                                        <th class="product-thumbnail">
                                                            &nbsp;
                                                        </th>
                                                        <th class="product-name">
                                                            Producto
                                                        </th>
                                                        <th class="product-price">
                                                            Precio
                                                        </th>
                                                        <th class="product-quantity">
                                                            Cantidad
                                                        </th>
                                                        <th class="product-subtotal">
                                                            Total
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        Double total = 0;
                                                    }
                                                    @foreach (var item in Model)
                                                    {
                                                        total = total + Convert.ToDouble(item.Subtotal);
                                                        <tr class="cart_table_item">
                                                            <td class="product-remove">
                                                                <a title="Remove this item" class="remove" href="~/CrearPedido/EliminarProducto?ClaveProducto=@item.ClaveProducto">
                                                                    <i class="fas fa-times"></i>
                                                                </a>
                                                            </td>
                                                            <td class="product-thumbnail">
                                                                <a href="shop-product-sidebar-left.html">
                                                                    <img width="100" height="100" alt="" class="img-fluid" src="~/img/products/Empresa/@ViewBag.NombreEmpresa/@item.Imagen">
                                                                </a>
                                                            </td>
                                                            <td class="product-name">
                                                                <a href="shop-product-sidebar-left.html">@item.Nombre</a>
                                                            </td>
                                                            <td class="product-price">
                                                                <span class="amount">@item.Precio</span>
                                                            </td>
                                                            <td class="product-quantity">

                                                                <div class="quantity">
                                                                    <form enctype="multipart/form-data" method="post" class="cart" action="~/CrearPedido/CalcularSubtotal">
                                                                        <input type="submit" class="minus" value="-">
                                                                        <input type="text" class="input-text qty text" title="Qty" value=@item.Cantidad name="Cantidad" min="1" step="1">
                                                                        <input type="hidden" value=@item.ClaveProducto name="ClaveProducto" />
                                                                        <input type="hidden" value=@item.Precio name="Precio" />
                                                                        <input type="submit" class="plus" value="+">
                                                                    </form>
                                                                </div>

                                                            </td>
                                                            <td class="product-subtotal">
                                                                <span class="amount">$@item.Subtotal </span>
                                                            </td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                            @*</form>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="featured-boxes">
                            <div class="row">
                                <div class="col-sm-6">

                                </div>

                                <div class="col-sm-6">
                                    <div class="featured-box featured-box-primary text-left mt-3 mt-lg-4">
                                        <div class="box-content">
                                            <h4 class="text-5 text-primary">Venta Total</h4>
                                            <table class="cart-totals">
                                                <tbody>
                                                    <tr class="cart-subtotal">
                                                        <th>
                                                            <strong class="text-dark">Subtotal</strong>
                                                        </th>
                                                        <td>
                                                            <strong class="text-dark"><span class="amount">$@total</span></strong>
                                                        </td>
                                                    </tr>
                                                    <tr class="shipping">
                                                        <th>
                                                            IVA
                                                        </th>
                                                        <td>
                                                            $00.00
                                                        </td>
                                                    </tr>
                                                    <tr class="total">
                                                        <th>
                                                            <strong class="text-dark">Total Final</strong>
                                                        </th>
                                                        <td>
                                                            <strong class="text-dark"><span class="amount">$@total</span></strong>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="actions" colspan="6">
                                                            <div class="actions-continue">
                                                                <form action="~/Comprar/Index" class="search nav-form d-none d-xl-inline-block" method="post">
                                                                    <input type="submit" value="Enviar Pedido" name="EnviarPedido" class="btn btn-xl btn-danger pr-4 pl-4 text-2 font-weight-semibold text-uppercase">
                                                                    <input type="hidden" value="@total" name="total" />
                                                                </form>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col">

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>


    </section>
